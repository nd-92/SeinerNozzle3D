boundaryPlanes
{
    type            surfaces;

    libs            (fieldFunctionObjects sampling);

    writeControl    writeTime;

    executeControl  writeTime;

    fields          (U UMean p pMean T TMean rho rhoMean sMean cMean LMean entropyMonopole entropyGradient LPrime);

    surfaceFormat   foam;

    surfaces
    {
        wall
        {
            type            patch;

            patches         ("walls");

            interpolate     true;

            surfaceFormat   foam;
        }

        inlet
        {
            type            patch;

            patches         ("inlet");

            interpolate     true;

            surfaceFormat   foam;
        }

        outlet
        {
            type            patch;

            patches         ("outlet");

            interpolate     true;

            surfaceFormat   foam;
        }
    }
}

